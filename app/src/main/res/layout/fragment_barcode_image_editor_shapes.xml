<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.views.fragments.barcodeImageEditor.DevAppsBarcodeImageEditorShapesFragmentDevApps">

    <RelativeLayout
        android:id="@+id/fragment_barcode_image_editor_shapes_outer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_barcode_image_editor_shapes_corner_radius_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAlignment="viewStart"
            style="@style/AppTheme.TextView.Appearance.Subtitle"
            android:text="@string/corners_radius" />

        <com.google.android.material.slider.Slider
            android:id="@+id/fragment_barcode_image_editor_shapes_corner_radius_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_barcode_image_editor_shapes_corner_radius_text_view"
            android:value="0.0"
            android:valueFrom="0.0"
            android:valueTo="1"
            android:contentDescription="@string/corners_radius" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>