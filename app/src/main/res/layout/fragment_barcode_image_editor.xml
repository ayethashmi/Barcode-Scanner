<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.views.fragments.barcodeImageEditor.DevAppsBarcodeImageEditorFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_barcode_image_editor_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_layout_height"
        android:background="?android:colorBackground"
        app:tabGravity="center"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/AppTheme.TabLayout.TextAppearance"
        android:contentDescription="@string/image_properties" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragment_barcode_image_editor_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_barcode_image_editor_tab_layout" />

</RelativeLayout>