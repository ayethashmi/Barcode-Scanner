<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_generator_item_height"
    android:layout_margin="@dimen/small_margin"
    app:cardCornerRadius="@dimen/card_generator_item_corner_radius"
    app:cardUseCompatPadding="false"
    android:transitionName="@string/animation_activity_transition">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal_margin">

        <ImageView
            android:id="@+id/template_item_barcode_creator_image_view"
            android:layout_width="@dimen/icon_large_size"
            android:layout_height="@dimen/icon_large_size"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"
            app:backgroundTint="?colorPrimary"
            app:tint="?colorOnPrimary"
            android:contentDescription="@string/image_view_description_icon" />

        <TextView
            android:id="@+id/template_item_barcode_creator_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/template_item_barcode_creator_image_view"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/normal_margin"
            style="@style/AppTheme.TextView.Appearance.Title.Primary" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>