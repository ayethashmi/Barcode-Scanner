<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".presentation.views.fragments.barcodeAnalysis.about.DevAppsDevAppsBarcodeAboutOverviewFragment">

    <!-- About Barcode Title -->
    <FrameLayout
        android:id="@+id/fragment_barcode_about_overview_about_barcode_entitled_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_barcode_about_overview_about_barcode_entitled_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:text="@string/about_barcode_label"
            style="@style/AppTheme.TextView.Appearance.Subtitle" />

    </FrameLayout>

    <!-- Barcode Image -->
    <FrameLayout
        android:id="@+id/fragment_barcode_about_overview_barcode_image_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_barcode_about_overview_about_barcode_entitled_layout" />

    <!-- Barcode Contents -->
    <FrameLayout
        android:id="@+id/fragment_barcode_about_overview_barcode_contents_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_barcode_about_overview_barcode_image_frame_layout" />

    <!-- More Info -->
    <FrameLayout
        android:id="@+id/fragment_barcode_about_overview_more_info_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_barcode_about_overview_barcode_contents_frame_layout" />

    <!-- Actions Title -->
    <FrameLayout
        android:id="@+id/fragment_barcode_about_overview_barcode_actions_entitled_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_barcode_about_overview_more_info_frame_layout">

        <TextView
            android:id="@+id/fragment_barcode_about_overview_barcode_actions_entitled_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:text="@string/actions_label"
            style="@style/AppTheme.TextView.Appearance.Subtitle" />

    </FrameLayout>

    <!-- Actions -->
    <FrameLayout
        android:id="@+id/fragment_barcode_about_overview_barcode_actions_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_barcode_about_overview_barcode_actions_entitled_layout" />

</RelativeLayout>