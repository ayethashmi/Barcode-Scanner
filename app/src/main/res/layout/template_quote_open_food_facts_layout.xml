<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/normal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/out_quote_open_food_facts_layout_card_view"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/normal_margin"
            android:backgroundTint="@android:color/white"
            app:cardUseCompatPadding="false"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/out_quote_open_food_facts_layout_image_view"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/normal_margin"
                android:backgroundTint="@android:color/white"
                android:src="@drawable/open_food_facts_logo"
                android:contentDescription="@string/image_view_description_logo" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/out_quote_open_food_facts_layout_card_view"
            android:layout_margin="@dimen/normal_margin"
            android:text="@string/open_food_facts_source_description_label"
            android:textIsSelectable="true"
            style="@style/AppTheme.TextView.Appearance.Normal.Primary" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>