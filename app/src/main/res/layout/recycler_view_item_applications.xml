<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/large_margin"
    android:layout_marginBottom="@dimen/large_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/recycler_view_item_applications_image_view"
        android:layout_width="@dimen/icon_x_large_size"
        android:layout_height="@dimen/icon_x_large_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image_view_description_icon" />

    <RelativeLayout
        android:id="@+id/recycler_view_item_applications_texts_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/recycler_view_item_applications_image_view"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/normal_margin">

        <TextView
            android:id="@+id/recycler_view_item_applications_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextView.Appearance.Normal.Primary" />

        <TextView
            android:id="@+id/recycler_view_item_applications_pkg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_view_item_applications_title_text_view"
            style="@style/AppTheme.TextView.Appearance.Normal.Secondary" />

    </RelativeLayout>

</RelativeLayout>